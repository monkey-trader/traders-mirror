{
  "name": "traders-mirror",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://monkey-trader.github.io/traders-mirror",
  "scripts": {
    "start": "craco start",
    "dev": "craco start",
    "build": "craco build",
    "test": "craco test",
    "test:unit": "vitest",
    "lint": "eslint 'src/**/*.{ts,tsx,js,jsx}' --max-warnings=0 || true",
    "format": "prettier --write 'src/**/*.{ts,tsx,js,jsx,json,css,md}'",
    "eject": "react-scripts eject",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build",
    "docs:clean": "rm -rf docs/build",
    "docs:plantuml": "node --experimental-specifier-resolution=node ./scripts/plantuml-build.mjs",
    "docs:asciidoc": "node --experimental-specifier-resolution=node ./scripts/asciidoc-build.mjs",
    "docs:build": "npm run docs:clean && npm run docs:plantuml && npm run docs:asciidoc",
    "docs:docker-build": "docker run --rm -v \"$(pwd)\":/documents -w /documents asciidoctor/docker-asciidoctor asciidoctor -r asciidoctor-diagram -a plantuml=true -D docs/build docs/ARCHITECTURE.adoc --trace",
    "prepare": "husky install"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1"
  },
  "devDependencies": {
    "@craco/craco": "^7.1.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@types/react": "18.2.6",
    "@types/react-dom": "18.2.4",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-react": "^7.0.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "gh-pages": "^6.3.0",
    "husky": "^8.0.3",
    "prettier": "^2.0.0",
    "typescript": "4.9.5",
    "vitest": "^1.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
